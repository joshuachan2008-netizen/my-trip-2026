    // --- RENDER FUNCTION ---
    function render(filterType) {
        const app = document.getElementById('app');
        app.innerHTML = ''; // Clear existing
        
        let lastDate = '';

        tripData.forEach(item => {
            // Filter Logic
            if (filterType !== 'all' && item.type !== filterType && !(filterType === 'flight' && item.type === 'flight')) return;

            // Render Date Header if new day
            if (item.date !== lastDate) {
                const dateObj = new Date(item.date);
                const dayName = dateObj.toLocaleDateString('en-US', { weekday: 'long' });
                const dateStr = dateObj.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                
                const dateHeader = document.createElement('div');
                dateHeader.className = 'timeline-date';
                dateHeader.innerText = `${dayName}, ${dateStr}`;
                app.appendChild(dateHeader);
                lastDate = item.date;
            }

            // Render Card
            const card = document.createElement('div');
            card.className = 'card';
            
            // Icon Background Color
            let typeClass = 'type-activity';
            if (item.type === 'flight') typeClass = 'type-flight';
            if (item.type === 'stay') typeClass = 'type-stay';
            if (item.type === 'transport') typeClass = 'type-transport';

            card.innerHTML = `
                <div class="icon-box ${typeClass}">${item.icon}</div>
                <div class="content">
                    <div class="time">${item.time}</div>
                    <div class="title">${item.title}</div>
                    <div class="location">üìç ${item.location}</div>
                    ${item.note ? `<div class="note">${item.note}</div>` : ''}
                </div>
            `;
            app.appendChild(card);
        });
    }

    // Filter Buttons Logic
    function filter(type) {
        render(type);
        // Update active button state
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        event.target.classList.add('active');
    }

    // Initial Render
    render('all');

</script>
